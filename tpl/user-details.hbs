<div class="row user-detail" rel="{{email}}">
    <div class="col s12 m12 l8">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div class="row">
                    <div class="col s6 m4 l2">
                        <img class="avatar" src="{{avatar}}" />
                    </div>
                    <div class="col s6 m8 l10">
                        <span class="card-title">Conversion with:</span>
                          <p>Username : {{username}}</p>
                          <p>Email (Entreprise) : {{email}}</p>
                          <p>UserID for reThink : {{UserId}}</p>
                          <p>DescriptorURL : {{DescriptorURL}}</p>
                          <p>PeerstatusURL : {{PeerstatusURL}}</p>
                          {{!--<p>PeerChatURL : {{PeerChatURL}}</p>--}}
                          <p>PeerWebRTCURL : {{PeerWebRTCURL}}</p>
                    
                    </div>
                </div>
                <div class="row">
                    <button class="startChat btn waves-effect waves-light right" type="submit" name="discuss">Discuss</button>
                    <button class="startCall btn waves-effect waves-light right" type="submit" name="call"><i class="material-icons">call</i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="row center">
        <div class="video-section col s12 m12 l8 hide"></div>
    </div>

    <div class="row center">
        <div class="chat-section col s12 m12 l8 hide"></div>
    </div>
</div>
